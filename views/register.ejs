<!-- register.ejs -->
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link type="text/css" href="login-register.css" rel="stylesheet" />
    <title>新規登録</title>
  </head>
  <body class="bg-light">
    <div
      class="container d-flex flex-column justify-content-center align-items-center"
    >
      <h1 class="h2 text-center text-primary">Chat App</h1>
      <div class="card width-edit pt-2">
        <div class="card-body text-center">
          <div class="fs-4 card-title pb-2">新規登録</div>

          <form action="/register" method="post">
            <input
              name="name"
              placeholder="お名前"
              class="form-control bottom-format"
              required
            />
            <input
              name="id"
              placeholder="ID"
              class="form-control bottom-format top-format"
              required
            />
            <input
              type="password"
              name="password"
              placeholder="パスワード"
              class="form-control top-format"
              required
            />
            <div class="py-2"></div>
            <button class="btn btn-primary w-100">登録</button>
          </form>
          <div class="border-bottom py-2"></div>
          <div class="py-2"></div>
          <div class="font-small">
            <span class="fw-lighter">
              すでにアカウントをお持ちの方は<br />
            </span>
            <a href="/login">ログイン</a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
